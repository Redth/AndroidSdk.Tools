<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<AssemblyName>android</AssemblyName>
		<PackAsTool>true</PackAsTool>
		<TargetFrameworks>netcoreapp3.1;net5.0</TargetFrameworks>
		<ToolCommandName>android</ToolCommandName>
		<GenerateProgramFile>false</GenerateProgramFile>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<!--<PreserveCompilationContext>true</PreserveCompilationContext>-->
	</PropertyGroup>

	<PropertyGroup>
		<PackageId>AndroidSdk.Tool</PackageId>
		<PackageVersion>0.3.0</PackageVersion>
		<Title>Global .NET Android SDK Tool</Title>
		<PackageDescription>Global dotnet tool for Android SDK related tasks.</PackageDescription>
		<Authors>Redth</Authors>
		<Owners>Redth</Owners>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.11.0" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
		<PackageReference Include="Spectre.Console" Version="0.41.0" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\AndroidSdk\AndroidSdk.csproj" />
	</ItemGroup>

</Project>
